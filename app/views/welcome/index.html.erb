<div style="margin-top:2%; margin-left:5%;">
	<% unless usuario_signed_in? %>
		<div class="page-header" >
		  <h2> Iniciar Session <small> Ingrese su username y contrase√±a </small></h2>
		</div>	
	<div align="right"  >
		<%= form_for(@usuario, as: :usuario,url: usuario_session_path(@usuario),html: {class:'form-inline', 
    role:'form'}) do |f| %>
		 <div class="form-group" style="margin: 10px;">
		    <%= f.text_field :username, autofocus: true, placeholder: "username", class: "form-control" %>
		    <%= f.password_field :password, autocomplete: "off", placeholder: "password", class: "form-control" %>
		    <%= f.submit "Log in", class: "btn btn-primary" %>
		  </div>
		   <%= content_tag(:div,content_tag(:label,@error,class: "label label-danger",style: "font-size: 12px;"),style: "margin: 10px;") %>
		<% end %>
	</div>
	<% else %>
		<div class="page-header" >
		  <h2> Bienvenido <%= current_usuario.nombres %></h2>
		</div>	
		<p id="notice"><%= notice %></p> 

	<% end %>
</div>
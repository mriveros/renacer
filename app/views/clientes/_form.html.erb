<%= form_for(cliente,remote: false,html: {class:'form-horizontal', role:'form'}) do |f| %>
  <h4 class="page-header2">Datos</h4>

  <div class="form-group form-group-sm <%= "has-error" if cliente.errors.has_key?(:identidad)  %>">
   <%= f.label :identidad, class:"col-md-2 control-label" %>
   <div class="col-md-3">
     <%= f.text_field :identidad, class: "form-control input-sm" , placeholder:"V-0000000" %>
     <% if cliente.errors.has_key?(:identidad) %>
     <span class="help-block"><%= cliente.errors.messages[:identidad].join(',') %></span>
     <% end %>
   </div>
 </div> 


  <div class="form-group form-group-sm <%= "has-error" if cliente.errors.has_key?(:nombres)  %>">
   <%= f.label :apellidos, class:"col-md-2 control-label" %>
   <div class="col-md-3">
     <%= f.text_field :apellidos, class: "form-control input-sm" %>
     <% if cliente.errors.has_key?(:apellidos) %>
     <span class="help-block"><%= cliente.errors.messages[:apellidos].join(',') %></span>
     <% end %>
   </div>
   <%=f.label :nombres,class:"col-md-2 control-label" %>
   <div class="col-md-5">
     <%= f.text_field :nombres, class: "form-control input-sm", rows:"4", placeholder:" nombre apellido รณ razon social "  %>
     <% if cliente.errors.has_key?(:nombres) %>
     <span class="help-block"><%= cliente.errors.messages[:nombres].join(',') %></span>
     <% end %>
   </div>
 </div>



  <div class="form-group form-group-sm <%= "has-error" if cliente.errors.has_key?(:fecha)  %>">
   <%= f.label :fecha,"Fecha Nacimiento", class:"col-md-2 control-label" %>
   <div class="col-md-3">
     <%= f.date_select :fecha, start_year: 1900,use_month_names: ["Enero","Febrero","Marzo","Abril","Mayo","Junio","Julio","Agosto","Septiembre","Octubre", "Noviembre", "Dicimebre"], class: "form-control input-sm" %>
     <% if cliente.errors.has_key?(:fecha) %>
     <span class="help-block"><%= cliente.errors.messages[:fecha].join(',') %></span>
     <% end %>
   </div>
 </div>



  <div id="direccion" class="form-group form-group-sm <%= "has-error" if cliente.errors.has_key?(:direccion)  %>">
    <%= f.label :direccion, class:"col-md-2 control-label" %>
    <div class="col-md-10">
       <%= f.text_area :direccion, class: "form-control input-sm" %>
       <% if cliente.errors.has_key?(:direccion) %>
       <span class="help-block"><%= cliente.errors.messages[:direccion].join(',') %></span>
       <% end %>
    </div>
  </div>
  
 
   <div id="telefono" class="form-group form-group-sm <%= "has-error" if cliente.errors.has_key?(:telefono)  %>">
    <%= f.label :telefono, class:"col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :telefono, class: "form-control input-sm",placeholder:"numero telefonico de casa " %>
       <% if cliente.errors.has_key?(:telefono) %>
       <span class="help-block"><%= cliente.errors.messages[:telefono].join(',') %></span>
       <% end %>
    </div>
  </div>
 

  <div class="form-group form-group-sm">
    <div class="col-md-12 " align="right">
      <%= submit_tag "Guardar" , class: "btn btn-primary btn-sm"  %>
    </div>
  </div>

<% end %>

 




  

 

